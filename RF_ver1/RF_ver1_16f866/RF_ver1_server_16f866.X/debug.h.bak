#ifndef DEBUG_H
#define	DEBUG_H

#include "lcd_hd44780_pic16.h"
#ifdef	__cplusplus
extern "C" {
#endif

#define DEBUG_LINE 1
    
#define DEBUG_INT_X(x, msg) {LCDWriteIntXY(x, DEBUG_LINE, msg);}
#define DEBUG_INT_X_CLEAR(x, msg) {LCDWriteIntXYCLEAR(x, DEBUG_LINE, msg);}
#define DEBUG_INT(msg) {LCDWriteIntXY(0, DEBUG_LINE, msg);}
#define DEBUG_INT_CLEAR(msg) {LCDWriteIntXYCLEAR(0, DEBUG_LINE, msg);}
    
#define DEBUG_STRING_X(x, msg) {LCDWriteStringXY(x, DEBUG_LINE, msg);}
#define DEBUG_STRING_X_CLEAR(x, msg) {LCDWriteStringXYCLEAR(x, DEBUG_LINE, msg);}
#define DEBUG_STRING(msg) {LCDWriteStringXY(0, DEBUG_LINE, msg);}
#define DEBUG_STRING_CLEAR(msg) {LCDWriteStringXYCLEAR(0, DEBUG_LINE, msg);}

#ifdef	__cplusplus
}
#endif

#endif	/* DEBUG_H */

